snippet temp2 "template for drawing 2D figures" b
settings.outformat="pdf";
usepackage("amsmath");
usepackage("stix2");
import graph;
import math;
size(10cm,0);

//axes and origin of cartesian coordinates system.
pair o = (0,0);
pair x = (1,0);
pair y = (0,1);
//draw some help lines
for (int i=0;i<10;++i)
{
	draw( (i,0) -- (i,10), dashed+gray(0.8));
	draw( (0,i) -- (10,i), dashed+gray(0.8));
}
draw(Label("$x$",Relative(1)),(-1,0)--x,Arrow());
draw(Label("$y$",Relative(1)),(0,-10)--y,Arrow());
endsnippet
