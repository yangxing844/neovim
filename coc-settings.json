{
	"suggest.noselect": false,
	"suggest.timeout": 1000,
	"suggest.removeDuplicateItems": true,
	"suggest.enablePreview": true,
	"suggest.floatConfig": {
		"border": true,
		"winblend": 70
	},
	"suggest.minTriggerInputLength": 3,
	"diagnostic.showUnused": false,
	//python
	"python.linting.flake8Enabled": true,
	"python.formatting.blackArgs": [
		"-l",
		"79"
	],
	"python.formatting.provider": "black",
	"python.linting.flake8Args": [
		"--extend-ignore errors=E51,E4"
	],
	// explorer
	"explorer.width": 30,
	"explorer.icon.enableNerdfont": true,
	"explorer.icon.source": "vim-devicons",
	"explorer.previewAction.onHover": false,
	"explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
	"explorer.keyMappings.global": {
		"<cr>": [
			"expandable?",
			"expand",
			"open"
		],
		"v": "open:vsplit"
	},
	"explorer.file.hiddenRules": {
		"extensions": [
			"o",
			"a",
			"obj",
			"pyc",
			"aux",
			"fls",
			"log",
			"fdb_latexmk",
			"gz",
			"xdv"
		],
		"filenames": [],
		"patternMatches": [
			"^\\."
		]
	},
	//ccls
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git",
				".vim",
				".clang-format"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/home/yangxing/.cache/.ccls-cache"
				},
				"client": {
					"snippetSupport": true
				},
				"index": {
					"onChange": false,
					"initialBlacklist": [
						"english"
					]
				},
				"highlight": {
					"lsRanges": true
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		}
	},
	"suggest.completionItemKindLabels": {
		"keyword": "",
		"variable": "",
		"value": "",
		"operator": "Ψ",
		"constructor": "",
		"function": "ƒ",
		"reference": "渚",
		"constant": "",
		"method": "",
		"struct": "פּ",
		"class": "",
		"interface": "",
		"text": "",
		"enum": "",
		"enumMember": "",
		"module": "",
		"color": "",
		"property": "",
		"field": "料",
		"unit": "",
		"event": "鬒",
		"file": "",
		"folder": "",
		"snippet": "",
		"typeParameter": "",
		"default": ""
	}
}